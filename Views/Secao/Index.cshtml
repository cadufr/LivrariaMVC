@model IEnumerable<Livraria.Models.Secao>
@{
    ViewData["Title"] = "Seções";
}
<h1>@ViewData["Title"]</h1>

@if(Model.Count() == 0)
{
    <p>Nenhuma Seção encontrado</p>
    <a class="btn btn-outline-dark" asp-controller="Secao" asp-action="Cadastro">Cadastre uma nova Seção</a>
}
else
{
    <table class="table table-white">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Descrição</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var secao in Model)
            {
                <tr>
                    <td>@secao.Id</td>
                    <td>@secao.Nome</td>
                    <td>@secao.Descricao</td>
                    <td>
                        <a class="btn btn-outline-info" asp-controller="Secao" asp-action="Show" asp-route-id="@secao.Id">Ver</a>
                        <a class="btn btn-outline-warning" asp-controller="Secao" asp-action="Update" asp-route-id="@secao.Id">Update</a>
                        <a class="btn btn-outline-danger" asp-controller="Secao" asp-action="Delete" asp-route-id="@secao.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-outline-dark" asp-controller="Secao" asp-action="Cadastro">Cadastre uma nova Seção</a>
}